@using WebService.Models.DatabaseModels
@model List<WebService.Models.DatabaseModels.UserStats>

<div class="row" style="width: 100%">
    <div class="col-xs-12 contentBox" style="text-align: center">
        <div class="row">
            <h1 class="col-xs-12 pageTitle text-left" style="margin-bottom: 10px">Users</h1>
        </div>

        @foreach (var user in Model) {
            var color = user.ProfileType == ProfileType.FitBit ? "#0592A7" : "#EF4902";

            <div class="col-md-12 profileStatBox">
                <div class="row">
                    <div class="col-xs-6 text-left">
                        <span class="statTitle">@user.Name - @user.UserId</span>
                    </div>
                    <div class="col-xs-6 text-left">
                        <span class="statResult" style="color: @color">@user.ProfileType</span>
                    </div>
                </div>
            </div>
        }


    </div>

</div>